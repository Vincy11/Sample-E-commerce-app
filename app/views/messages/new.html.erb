<% provide(:title, 'Send Message') %>
<h1>Message Seller/Buyer</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message) do |f| %>
      <%= render 'shared/error_messages2' %>
      <% if @message.status %>
      <%= f.label :email, "Your Email:" %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :user_id, "SellerID" %>
      <%= f.text_field :user_id, :value => @message.uid, class: 'form-control' %>
      <%end%>
      
      <br/>
      <% if !@message.status %>
      <%= f.label :user_id, "RecieverID" %>
      <%= f.text_field :user_id, :value => @message.uid, class: 'form-control' %>
      <%end%>
      <%= f.label :message, "Message" %>
      <%= f.text_area(:message, size: '50x10') %>
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
