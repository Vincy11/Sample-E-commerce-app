<% provide(:title, 'Add Commodity') %>
<h1>Add Commodity</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@commodity) do |f| %>
      <%= render 'shared/error_messages1' %>

      <%= f.label :commname %>
      <%= f.text_field :commname, class: 'form-control' %>
      
      <%= f.label :commtype, 'Commodity Type' %>
      <%= f.select :commtype, [['Beverage','beverages'],['Essentials','essentials'],['Food Items','food items'],['Electronics','electronics']], class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area(:description, size: '50x10') %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: 'form-control' %>
      
      <%= f.hidden_field :user_id, :value => 0, class: 'form-control' %> 

      <%= f.submit "Add Commodity", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
